pipeline {
    agent {
        label 'silver'
    }
    tools {
        jdk 'jdk-17'
        maven 'maven'
    }
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Clone') {
            steps {
                git branch: 'main', url: 'git@github.com:AkhilMylaram/terraform.git'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn install'
            }
        }

        stage('Archive Artifacts') {
            steps {
                sh '''
                    mkdir -p artifacts
                    find target -name "*.tar" -exec cp {} artifacts/ \\;
                '''
                archiveArtifacts artifacts: 'artifacts/*', fingerprint: true
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
