pipeline {
    agent any

    tools {
        jdk 'jdk-17'
        maven 'maven'
    }

    environment {
        DOCKER_IMAGE = 'akhilmylaram/vprofile-app'
        DOCKER_TAG = "${JOB_NAME}-${BUILD_NUMBER}-${new Date().format('yyyyMMdd-HHmmss')}"
    }

    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/AkhilMylaram/terraform.git'
            }
        }

        stage('Build WAR') {
            steps {
                dir('app') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('app') {
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                }
            }
        }

        stage('Trivy Scan') {
            steps {
                dir('app') {
                    sh """
                        trivy image --scanners vuln --vuln-type os --severity CRITICAL,HIGH ${DOCKER_IMAGE}:${DOCKER_TAG}

                    """
                   // archiveArtifacts artifacts: 'trivy-report.txt', fingerprint: true
                }
            }
        }

        stage('Docker Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                        docker logout
                    """
                }
            }
        }
    }
}
